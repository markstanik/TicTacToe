<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id ="@+id/constraintlayout">

    <Button
            android:id="@+id/topMid"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Button"
            app:layout_constraintEnd_toStartOf="@+id/topRight"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/midMid"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Button"
            app:layout_constraintEnd_toStartOf="@+id/midRight"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toEndOf="@+id/midLeft"
            app:layout_constraintTop_toBottomOf="@+id/topMid" />

    <Button
            android:text="Button"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:id="@+id/midRight"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/topRight" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>

    <Button
            android:id="@+id/botMid"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/botRight"
            app:layout_constraintTop_toBottomOf="@+id/midMid"
            app:layout_constraintVertical_bias="0.13" />

    <Button
            android:text="Button"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:id="@+id/botRight" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/midRight" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintVertical_bias="0.055"/>

    <Button
            android:id="@+id/botLeft"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/botMid"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/midLeft"
            app:layout_constraintVertical_bias="0.134" />

    <Button
            android:id="@+id/midLeft"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLeft" />

    <Button
            android:id="@+id/topLeft"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="136dp"
            android:text="Button"
            app:layout_constraintEnd_toStartOf="@+id/topMid"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:text="Button"
            android:layout_width="113dp"
            android:layout_height="121dp"
            android:id="@+id/topRight" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" android:layout_marginTop="132dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>